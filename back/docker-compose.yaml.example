services:

  api:
    build: ./
    restart: always
    container_name: back
    env_file:
      - .env
    ports:
      - '3000:3000'
    depends_on:
      - db

  db:
    image: postgres:16
    restart: always
    ports:
      - "5432:5432"
    environment:
      POSTGRES_DB: ${DB_NAME}
      POSTGRES_USER: ${DB_USERNAME}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
    volumes:
      - ./postgres-data:/var/lib/postgresql/data

  #Testing DATABASE
  test-db:
    container_name: test_db
    image: postgres:16
    ports: 
      - "5435:5432" 
    environment:
      POSTGRES_PASSWORD: "postgres"
      POSTGRES_DB: "testdb"